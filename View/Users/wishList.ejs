    <div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg')">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs">
                        <span class="mr-2"><a href="index.html"></a></span>
                    </p>
                    <h1 class="mb-0 bread">My WishList</h1>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">

            <div class="col-md-12">

                <table class="table">
                    <thead class="thead-primary">
                        <tr class="text-center">
                            <th>&nbsp;</th>
                            <th>Product name</th>
                            <th>Price</th>
                            <th>Stock</th>


                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>


                        <% for(let i=0;i<userData.length;i++){%>

                            <tr class="text-center container-item">
                                <td class="image-prod">
                                    <div class="img"
                                        style="background-image:url(/images/<%= userData[i].productId.productImage[0] %>)">
                                    </div></a>
                                </td>
                                <td class="product-name">
                                    <h3>
                                        <%= userData[i].productId.productName %>
                                    </h3>
                                </td>
                                <td class="product-name">
                                    <h3> â‚¹<%= userData[i].productId.price %>
                                    </h3>
                                </td>
                                <td class="product-name">
                                    <h3> Only <%= userData[i].productId.kg %> kg left.
                                    </h3>
                                    <h3>Grab fast!!</h3>
                                </td>


                                <style>
                                    .product-remove a {
                                        display: inline-block;
                                        position: relative;
                                        outline: none;
                                        /* Add this line to remove the focus outline */
                                    }

                                    .product-remove a img {
                                        width: 20px;
                                        height: 20px;
                                        transition: transform 0.3s;
                                    }

                                    .product-remove a:hover img {
                                        transform: scale(1.2);
                                    }
                                </style>


                                <td class="product-remove">
                                    <a href="/unwishItem?id=<%= userData[i]._id %>">
                                    <img src="\images\trashcan.png">
                                    </a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
