    <script>
            var passwordError = document.getElementById("password-info");
            var repasswordError = document.getElementById("repassword-info");
            var addform = document.getElementById('addForm')

            function validateForm() {
                event.preventDefault()
                if (
                    !validatePassword() &&
                    !validateRePassword() 
                ) {
                    submitError.style.direction = "block";
                    submitError.innerHTML = "Please Fix the errors to Register";
                    event.preventDefault();
                    setTimeout(function () {
                        submitError.style.display = "none ";
                    }, 3000);
                    return false;
                } else if (
                    !validatePassword() ||
                    !validateRePassword() 
                ) {
                    submitError.style.direction = "block";
                    submitError.innerHTML = "Please Enter All Required Fields to Register";
                    event.preventDefault();
                    setTimeout(function () {
                        submitError.style.display = "none ";
                    }, 3000);
                    return false;
                }
                else{
                    addform.submit()
                }
            }

            function validatePassword() {
                        var password = document.getElementById("password").value;

                        if (password.length == 0) {
                            passwordError.innerHTML = "Password is required";
                            return false;
                        }
                        if(password.length<8){
                            passwordError.innerHTML="Atleast 8 characters are required"
                            return false
                        } 

                        passwordError.innerHTML = "";
                        return true;
                    }

                    function validateRePassword() {
                        var repassword = document.getElementById("repassword").value
                        var password = document.getElementById("password").value;

                        if (repassword.length == 0) {
                            repasswordError.innerHTML = "Password is required";
                            return false;
                        }
                        
                        repasswordError.innerHTML = ""
                        return true;
                    }

            
            
  
