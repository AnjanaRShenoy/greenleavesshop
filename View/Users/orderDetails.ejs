<%- include('../layouts/userHeader.ejs')%>

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        
        <div class="col-lg-10 col-xl-8">
          <div class="card" style="border-radius: 10px;">
            
            <div class="card-header px-4 py-5">
             
              <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #82ae46;"><%= orders.address.name %></span>!</h5>
            </div>
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0" style="color: #82ae46;">Receipt</p>
                <p class="small text-muted mb-0">OrderID : <%= orders._id %></p>

                <a href="/invoice?id=<%= orders._id %>" class="nav-link"><img src="/images/download-logo.png" style="height: 35px;"></span></a>
               
              </div>
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                  <%for(let i=0;i<orders.orderItems.length;i++){%>
                  <div class="row pb-5">
                    
                    <div class="col-md-2">
                      <div class="img" style="background-image:url(/images/<%= orders.orderItems[i].productId.productImage[0] %>); width: 50px; height: 50px; object-fit: cover">
                      </div>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0"><%=orders.orderItems[i].productId.productName %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small"><%=orders.orderItems[i].kg %> kg</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">₹ <%=orders.orderItems[i].total %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small"><%=orders.dateOrdered.toDateString()%></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small"><%=orders.status %></p>
                    </div>
                    
                  </div>
                  <% } %>
  
                 
                  
                  </div>
                </div>
              </div>
              
  
              <div class="d-flex justify-content-between pt-2">
                <p class="fw-bold mb-0"></p>
                <p class="text-muted mb-0"><span class="fw-bold me-4">Total-</span>₹ <%=orders.grandTotal %></p>
              </div>
  
              <div class="d-flex justify-content-between pt-2">
                <p class="text-muted mb-0">Order Details</p>
                <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> ₹<%=orders.couponAmount %></p>
              </div>
  
              <div class="d-flex justify-content-between">
                <p class="text-muted mb-0">Invoice Date : <%=orders.dateOrdered.toDateString()%></p>
                <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> 0</p>
              </div>
              
              <div class="d-flex justify-content-between mb-5">
                <p class="text-muted mb-0"></p>
                
              </div>
            </div>
            <div class="card-footer border-0 px-4 py-5"
              style="background-color: #82ae46; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                paid:   <span class="h2 mb-0 ms-2">  ₹ <%=orders.finalAmount %></span></h5>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </section>

  

  <%- include('../layouts/userFooter.ejs')%>