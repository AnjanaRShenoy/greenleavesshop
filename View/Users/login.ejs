<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div style="border: 1px solid; padding: 10px;">
                    <form onsubmit="return validateForm();" action="/login" method="post">
                        <span class="login100-form-title p-b-43">
                            Login
                        </span>
                        <span class="formerror text-danger" id="email-info"></span>
                        <div class="wrap-input100 validate-input">
                            <input class="input100" type="email" name="email" id="email" onkeyup="validateEmail()">
                            <span class="focus-input100"></span>
                            <span class="label-input100">Email</span>
                        </div>
                        <!-- <input type="email" name="email" placeholder="e-mail" required>
    <br> -->
                        <span class="formerror text-danger" id="password-info"></span>
                        <div class="wrap-input100 validate-input">
                            <input class="input100" type="password" name="password" id="password"
                                onkeyup="validatePassword()">
                            <span class="focus-input100"></span>
                            <span class="label-input100">Password</span>
                        </div>
                        <!-- <input type="password" name="password" placeholder="password" required>
    <br> -->
                        <div class="flex-sb-m w-full p-t-3 p-b-32">

                            <div>
                                <br>
                                <a href="/forgot" class="txt1">
                                    Forgot Password?
                                </a>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="btn btn-success m-2">
                                Login
                            </button>
                        </div>

                        <div class="text-center p-t-10 p-b-20">
                            <a href="/signup" class="txt2" style="color: black" onmouseover="this.style.color='grey';"
                                onmouseout="this.style.color='black';">
                                Sign up
                            </a>
                            <span>
                                <p style="color: green"></p>
                                <% if(typeof successMessage!=='undefined' ){ %>
                                    <p style="color:green"><%- successMessage %></p>
                                    <% } if(typeof errorMessage!=='undefined' ){ %>
                                        <p style="color:red"><%- errorMessage %></p>
                                        <% } %>
                            </span>
                        </div>

                        <!-- <input type="submit" value="Login"> -->
                    </form>
                </div>
                <div class="login100-more"
                    style="background-image: url('images/Fresh-fruits-and-veggies-AdobeStock_62326928.jpeg');">
                </div>
                <!-- <a href="/forget">Forgot password</a> -->





                <!--===============================================================================================-->
                <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
                <!--===============================================================================================-->
                <script src="vendor/animsition/js/animsition.min.js"></script>
                <!--===============================================================================================-->
                <script src="vendor/bootstrap/js/popper.js"></script>
                <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
                <!--===============================================================================================-->
                <script src="vendor/select2/select2.min.js"></script>
                <!--===============================================================================================-->
                <script src="vendor/daterangepicker/moment.min.js"></script>
                <script src="vendor/daterangepicker/daterangepicker.js"></script>
                <!--===============================================================================================-->
                <script src="vendor/countdowntime/countdowntime.js"></script>
                <!--===============================================================================================-->
                <script src="js/main.js"></script>

                <script>
                    var emailError = document.getElementById("email-info");
                    var passwordError = document.getElementById("password-info");
                    var submitError = document.getElementById("submit-info");

                    function validateEmail() {
                        var email = document.getElementById("email").value;

                        if (email.length == 0) {
                            emailError.innerHTML = "E-mail is required";
                            return false;
                        }

                        if (
                            !email.match(
                                /^[a-zA-Z0-9.!#$%&â€™+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)$/
                            )
                        ) {
                            emailError.innerHTML = "Invalid e-mail address";
                            return false;
                        }

                        emailError.innerHTML = "";
                        return true;
                    }

                    function validatePassword() {
                        var password = document.getElementById("password").value;

                        if (password.length == 0) {
                            passwordError.innerHTML = "Password is required";
                            return false;
                        }
                        if (password.length !== 8) {
                            passwordError.innerHTML = "Atleast 8 characters are required"
                            return false
                        }

                        passwordError.innerHTML = "";
                        return true;
                    }

                    function validateForm() {
                        if (
                           
                            !validateEmail() &&                            
                            !validatePassword() 
                            
                        ) {
                            submitError.style.direction = "block";
                            submitError.innerHTML = "Please Fix the errors to Register";
                            event.preventDefault();
                            setTimeout(function () {
                                submitError.style.display = "none ";
                            }, 3000);
                            return false;
                        } else if (
                            
                            !validateEmail() ||
                            
                            !validatePassword() 
                            
                        ) {
                            submitError.style.direction = "block";
                            submitError.innerHTML = "Please Enter All Required Fields to Register";
                            event.preventDefault();
                            setTimeout(function () {
                                submitError.style.display = "none ";
                            }, 3000);
                            return false;
                        }
                    }


                </script>

</body>

</html>