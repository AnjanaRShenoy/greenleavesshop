<%- include('../layouts/adminHeader.ejs')%>

        <div class="col-md-6" style="margin-left: 290px;">
            <br><br>
            <div class="add-product">
              <h2>Edit Product</h2>
              
              <br>
              <br>
              <form action="/admin/editProducts" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="product-name">Product Name</label>
                  <input type="text" name="productname" class="form-control" id="product-name" value="<%=products.productName %>">
                </div>
                <div class="form-group">
                  <label for="product-description">Description</label>
                  <input type="text" class="form-control" name="description" id="product-description" rows="3"  value="<%=products.productDescription %>">
                </div>
                <div class="m-4">
                  <label style="color: #fff; font-weight: 300;">Upload Images</label><br>
                  <input type="file" class="form-control-file custom-file-input" id="preview-image" name="productImage" onchange="previewImage(event)" style="opacity: 100" multiple>
                </div>
                
                <div class="form-group">
                  <label for="product-category">Category</label>
                  <select name="category" class="form-control" id="product-category">
                    <option value="">Select category</option>
                    <% for (let i = 0; i < categories.length; i++) {
                         if (!categories[i].categoryBlock) { %>
                           <option value="<%= categories[i].categoryName %>"><%= categories[i].categoryName %></option>
                    <% }
                       } %>
                  </select>
                </div>
                
              
                <div class="form-group">
                  <label for="product-price">Price</label>
                  <input type="number" name="price" class="form-control" id="product-price" value="<%=products.price %>">
                </div>
                <div class="form-group">
                  <label for="product-kg">Kg</label>
                  <input type="number" name="kg" class="form-control" id="product-kg" value="<%=products.kg %>">
                </div>
                
                <button type="submit" class="btn btn-primary">Edit Product</button>
              </form>
            </div>
          </div>

         


          <%- include('../layouts/adminFooter.ejs')%>