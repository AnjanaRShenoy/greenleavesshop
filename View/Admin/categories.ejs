                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center mb-5">
                            <h2 class="heading-section">Category list</h2>
                        </div>
                    </div>
                </div>
                
        <div class="row">
            <!-- <div class="col-md-12">
                <h4 class="text-center mb-4"></h4> -->
                <div class="table-wrap">
                    <table class="table">
                    <thead class="thead-primary">
                      <tr>
                        <th style="width: 15%;">Category ID</th>
                      <th style="width: 15%;">Category Name</th>
                      <th style="width: 20%;">Category Offer</th>
                      
                      <th style="width: 20%;">Action</th>
                        <!-- <th>Status</th>  -->
                      </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < category.length; i++) { %>
                        <tr>
                          <td><%= category[i]._id %></td>
                          <td><%= category[i].categoryName %></td>
                          <td><%= category[i].categoryOffer%></td>
                          
                          <td>
                            <img src="/images/<%=category[i].categoryImage[0]%>" alt="Product Image"
                              style="width: 50px; height: 50px;">
                          <% if(category[i].categoryBlock==true){ %>
                            <td>
                              <div class="btn bg-secondary">
                                <a class="text-light text-decoration-none unblock-link" href="/admin/undeletecategory?id=<%= category[i]._id %>">Unblock</a>
                              </div>
                            </td>
                            <% }else{ %>
                            <td>
                              <div class="btn bg-secondary">
                                <a class="text-light text-decoration-none unblock-link" href="/admin/deletecategory?id=<%= category[i]._id %>">Block</a>
                              </div>
                            </td>
                            <% } %>
                        </tr>
                        <!-- Add more category rows here -->
                        <% } %>
                      </tbody>
                    </table>
                </div>
            </div>
        </div>

